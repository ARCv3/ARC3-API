const app = require('../src/app.js');

const mongoose = require('mongoose');

const dotenv = require('dotenv');
dotenv.config();

const port = process.env.PORT || 3000;
(async () => {

  mongoose.connect(process.env.MONGODB_URI)

  app.listen(port, () => {
    console.log('connected at port: ' + port);
  });

  process.on('SIGTERM', () => {
    server.close(() => {
      console.log('closing...')
    })
  })

})();

